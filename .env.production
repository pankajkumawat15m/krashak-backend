# Production Environment Variables
NODE_ENV=production

# MongoDB Connection (Use MongoDB Atlas for cloud hosting)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/krashak-db

# Server Port (Hostinger usually provides specific ports)
PORT=3000

# JWT Secret (Generate a strong secret key)
JWT_SECRET=your-strong-jwt-secret-key-for-production

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-production-email@gmail.com
EMAIL_PASS=your-app-specific-password

# Razorpay Configuration
RAZORPAY_KEY_ID=your-production-razorpay-key-id
RAZORPAY_KEY_SECRET=your-production-razorpay-secret

# CORS Origin (Your frontend URL)
FRONTEND_URL=https://your-domain.com